<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="25.0" prefWidth="450.0" prefHeight="350.0" 
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.mycompany.server.PrimaryController"
      style="-fx-background-color: #1a2a3a;">
   <children>
      <Label style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #ecf0f1;" text="Tic-Tac-Toe Server" />
      
      <VBox alignment="CENTER" spacing="15.0">
         <Label fx:id="statusLabel" style="-fx-text-fill: #e74c3c; -fx-font-size: 18; -fx-font-weight: bold;" text="STATUS: STOPPED" />
         <Button fx:id="serverButton" onAction="#onServerToggle" prefWidth="250.0" 
                 style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14; -fx-padding: 12;" 
                 text="START SERVER" />
      </VBox>
      
      <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 13;" text="Networking listening on Port: 5000" />
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>
